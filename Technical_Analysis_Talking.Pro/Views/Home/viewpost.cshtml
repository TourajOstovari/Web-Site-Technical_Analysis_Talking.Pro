@model Technical_Analysis_Talking.Pro.App_Data.Posts_

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="Responsive Site Designer 2.5.2425">
    <title>ViewPost</title>
    <link rel="stylesheet" href="~/css/bootstrap4.min.css">
    <link rel="stylesheet" href="~/css/wireframe-theme.min.css">
    <script>document.createElement("picture");</script>
    <script class="picturefill" async="async" src="~/js/picturefill.min.js"></script>
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Average+Sans%7CQuattrocento%7CQuattrocento+Sans:400,i%7CQuintessential%7CRaleway:200,400,b,i%7CRambla:400,i%7CYellowtail">
</head>

<body>
    <div class="row">
        <div class="col-xs-12 btn-group-sm" style="border-bottom-color:darkgray; border-bottom-width:thin; border-bottom-style:dashed;">
            <nav class="container-fluid nav navbar-nav alert alert-heading">
                <a class="link-text nav-item alert-heading" href="@Url.Action("index", "home")" title="Home Page">Home</a>
                <a class="link-text nav-item alert-heading" href="@Url.Action("archive","home")" title="Archive Of Technical News">Technical News Archive</a>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <main class="container-fluid">
                <span class="text-element text-3">
                    <span style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:xx-large;">@Model.title</span>
                </span>
            </main>
        </div>
        <br />
        <div class="col-xs-12 column-1">
            <main class="container-fluid">
                <span class="text-element text-3">
                    <span style="font-family: 'Agency FB'; font-size: x-large;">Description:<br /></span>
                </span>
            </main>
        </div>
        <div class="col-xs-12 column-2 col-lg-11">
            <main class="container-fluid">
                <p class="paragraph" style="font-family:'Agency FB'; font-size:x-large;">@Model.description</p>
            </main>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-12 col-sm-12">
                <picture>
                    <img alt="2" src="~/images/@Model.image" class="img-fluid rounded">
                </picture>
            <br />
            <span style="font-family:'Agency FB'; font-size:x-large;">Date: @Model.date       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;      Authore: @Model.authore      &nbsp;&nbsp;&nbsp;&nbsp;      Symbol: @Model.symbol</span>
</div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-12 col-sm-12">
            <picture>
                <!--[if IE 9]><video style="display: none;"><![endif]-->
                <img srcset="~/images/advocados.jpeg?id=17&amp;cache=1574883529948" style="width: 728px;height:90px; margin-top:5px; margin-bottom:10px;" class="img-fluid rounded"><!--[if IE 9]></video><![endif]-->
            </picture>
        </div>
    </div>
    <div class="row" style="background-color: #ffda79;">
        <div class="col-xs-12 column-6">
            <a class="link-text text-link-2 rounded-top" href="#" title="Donate us to keep up this website" target="_blank">
                <span class="text-link-text-3" style="font-family:'Agency FB'; font-size:x-large;">Donate now via Bitcoin</span>
            </a>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/outofview.js"></script>
    <script src="~/js/tether.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>

</html>